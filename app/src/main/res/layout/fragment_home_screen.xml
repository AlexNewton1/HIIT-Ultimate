<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeScreenFragment">

    <Button
        android:id="@+id/createNewWorkoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Workout"
        app:layout_constraintBottom_toTopOf="@+id/editWorkout1Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/editWorkout1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Workout #1!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startWorkout1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Workout #1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editWorkout1Button" />

    <Button
        android:id="@+id/loadSavedWorkoutsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Workouts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startWorkout1Button" />

</androidx.constraintlayout.widget.ConstraintLayout>