<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="24dp"
        android:height="24dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">

        <shape android:shape="oval">
            <corners android:radius="1dp" />
            <stroke
                android:width="1dp"
                android:color="#777" />
            <size
                android:width="16dp"
                android:height="16dp" />
        </shape>

    </item>
</layer-list>